<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Closed_won_requires_Solution_Document</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 ISPICKVAL( StageName , &#39;Closed Won&#39;),
 ISBLANK(Solution_Document__c) 
)</errorConditionFormula>
    <errorDisplayField>Solution_Document__c</errorDisplayField>
    <errorMessage>Solution Document must be complete before Closed Won</errorMessage>
</ValidationRule>
