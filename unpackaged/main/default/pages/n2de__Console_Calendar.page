<apex:page controller="n2de.Console_Calendar_Controller" tabStyle="Console__tab" sidebar="false" standardStylesheets="false" docType="html-5.0" title="Distribution Engine: Calendar" action="{!init}">
    <html>

    <head>
        <c:PageHead />

        <script defer="defer">
            window.addEventListener('load', function() {
                <c:ApplicationContext attrOrgNamespace="{!JSENCODE(OrgNamespace)}" attrIsSandbox="{!IsSandbox}" attrIsDeveloperOrg="{!IsDeveloperOrg}" attrIsTrialOrg="{!IsTrialOrg}"/>
                <c:PageContext />

                const getFilterOptionsData = new n2.dataProvider.VisualForce({
                    id: 'get-filter-options-data',
                    methods: {
                        get: {
                            method: '{!$RemoteAction.Console_Calendar_Controller.getFilterOptionData}'
                        }
                    }
                });

                const getCalendarData = new n2.dataProvider.VisualForce({
                    id: 'get-calendar-data',
                    methods: {
                        get: {
                            method: '{!$RemoteAction.Console_Calendar_Controller.getCalendarData}',
                            config: {
                                buffer: false,
                                timeout: 120000
                            }
                        }
                    }
                });

                const getCalendarDayData = new n2.dataProvider.VisualForce({
                    id: 'get-calendar-day-data',
                    methods: {
                        get: {
                            method: '{!$RemoteAction.Console_Calendar_Controller.getCalendarDayData}',
                            config: {
                                buffer: false,
                                timeout: 120000
                            }
                        }
                    }
                });

                const calendarPage = new n2.de.page.console.Calendar({
                    id: 'calendar-page'
                });

                calendarPage.render();
            });
        </script>
    </head>

    <body></body>

    </html>
</apex:page>